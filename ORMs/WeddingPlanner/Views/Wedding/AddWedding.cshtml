@{
    ViewData["Title"] = "Home Page";
}
@model WeddingPlanner.Models.WeddingViewModel
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/dashboard">Wedding Planner</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/dashboard">Home</a></li>
            <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
        </ul>
    </div>
</nav>
<h2>Plan Your Wedding</h2>
<form asp-action="CreateWedding" asp-controller="Wedding" method="POST">
    <input type="hidden" value="@TempData["UserId"]" name="UserId">
    <div class="form-group row">
        <div class="col-md-4">
            <label>Wedder One: </label>
            <input asp-for="WedderOne" class="form-control">
            <span asp-validation-for="WedderOne"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <label>Wedder Two: </label>
            <input asp-for="WedderTwo" class="form-control">
            <span asp-validation-for="WedderTwo"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <label>Date: </label>
            <input type="date" asp-for="Date" class="form-control">
            <span asp-validation-for="Date"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <label>Wedding Address: </label>
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address"></span>
        </div>
    </div>
    <div class="form-group row">
        <input type="submit" class="btn btn-success">
    </div>
</form>